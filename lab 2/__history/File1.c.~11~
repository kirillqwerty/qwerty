 printf("4. Информация о факультете ИК.\n");
 printf("5. Информация о факультете КП.\n");
 printf("6. Получение рекомендации.\n");
 printf("7. Выход из приложения.\n");
 scanf("%d",&vibor);
 if (vibor == 1)
 {
  InfoKsis();
 }
 if (vibor == 2)
 {
  InfoFity();
 }
 if (vibor == 3)
 {
  InfoFre();
 }
 if (vibor == 4)
 {
  InfoFik();
 }
 if (vibor == 5)
 {
  InfoFkp();
 }
 if (vibor == 6)
 {
  Spravka();
 }
 if (vibor == 7)
 {

 }
}
