int CountWords(char *str)
{
  int count = 0;
 for (int i = 0; i < 100; i++)
	{
	 if (str1[i] == ' ')
	 {
	   count++;
	 }
	 else if (str1[i] == '\0')
		  {
			return count;
		  }
	 return count;
	}
}